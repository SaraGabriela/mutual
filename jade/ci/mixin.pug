mixin modal(ide,idcontenido)
	.modal.fade(id=ide,tabindex="-1",role="dialog",aria-labelledby="myModalLabel")
		div(class="modal-dialog",role="document")
			.modal-content
				.modal-header
					button(type="button",class="close",data-dismiss="modal",aria-label="Close")
						span(aria-hidden="true") &times;
				.modal-body.justify-content-center
					h4.text-center.pd-1(id=idcontenido)
				.modal-footer
					button.btn.btnPrincipal(type="button",data-dismiss="modal") Cerrar

mixin pregunta(idHead,clase,idCont,contName,pregunta,resp,exp,show)
	.card.redbg
		div(class="card-header",role="tab",id=idHead)
			h5.mb-0
				a(class=clase,data-toggle="collapse",href=idCont,aria-expanded=exp,aria-controls=contName)=pregunta
		div(id=contName,class="collapse",class=show,role="tabpanel",aria-labelledby=idHead, data-parent="#accordion")
			.card-body.text-justify.whitebg
				p=resp


